<%- include("../partials/header.ejs") %>
<%- include("../partials/mainNav.ejs") %>

<div id="createAccount" class="my-5 createAccount">
    <p><br></p>
    <div class="container my-5">
        <div class="jumbotron bg-dark text-light rounded-3 my-5 mx-2 py-5">
            <h1 class="mx-3">Create Account</h1>
            <h5 class="mx-3">Please enter your data to create an account</h5>
        </div>
        <div class="container">
            <form class="form" method="POST" action="/createAccount">
                <div class="form-group my-2">
                    <label class="text-warning" for="nameTextField">User Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter User Name"
                    name="username" required>
                </div>
        
                <div class="form-group my-2">
                    <label class="text-warning" for="authorTextField">Password</label>
                    <input type="password" class="form-control"
                    id="passwordTextField"
                    placeholder="Enter your password"
                    name="password" required>
                </div>
        
                <div class="form-group my-2">
                    <label class="text-warning" for="publishedTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email"
                    name="email" required>
                </div>

                <button class="btn btn-warning" type="submit">
                    <i class="fas fa-edit"></i> Lets Go</button>
            </form>
    
        </div>
    </div>  
    <%- include("../partials/bottomNav.ejs") %>   
</div>
  
